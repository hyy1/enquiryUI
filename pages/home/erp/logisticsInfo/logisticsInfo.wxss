/* pages/home/erp/logisticsInfo/logisticsInfo.wxss */
.header {
  height: 88rpx;
  background: #fff;
  font-size: 28rpx;
  color: #999999;
  line-height: 88rpx;
  padding-left: 30rpx;
  border-top: 1rpx solid #b2b2b2;
}
.header .text {
  color: #151515;
}

/* 物流信息 */
.lists .list {
  background: #fff;
  margin-top: 20rpx;
  padding-top: 14rpx;
}
.lists .caption {
  font-size: 28rpx;
  color: #fff;
  padding-left: 32rpx;
  line-height: 62rpx;
  background-repeat: no-repeat;
  background-size: 150rpx 62rpx;
  background-image: url(http://1.img.dianjiangla.com/enquiryAssets/icon_express.png);
}
.lists .content {
  padding-left: 30rpx;
}
.lists .content .express-info {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #e0e0e0;
}
.lists .express-info .info-tittle {
  font-size: 28rpx;
  line-height: 52rpx;
  color: #999999;
}
.lists .express-info .info-tittle .text {
  color: #151515;
}
/* 商品列表 */
.lists .commodity {
  min-height: 161rpx;
  border-bottom: 1rpx solid #e0e0e0;
}
.lists .commodity .cell {
  border-bottom: 1rpx dashed #e0e0e0;
  display: flex;
  justify-content: flex-start;
  align-items:center; 
}
.cell .left{
  margin-top: 15rpx;
}
.lists .commodity .cell:last-child{
  border-bottom: 0rpx solid #e0e0e0;
}
.lists .commodity .hid {
  display: none;
}
.lists .commodity .cell .left image {
  width: 124rpx;
  height: 122rpx;
  margin-right: 18rpx;
}
.lists .commodity .cell .head {
  font-size: 28rpx;
  margin-right: 30rpx;
  color: #333333;
}
.lists .commodity .cell .body {
  font-size: 22rpx;
  margin-top: 20rpx;
  color: #333333;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.lists .commodity .cell .footer .line {
  font-size: 24rpx;
  line-height: 65rpx;
  padding-right: 30rpx;
  color: #999999;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx dashed #e0e0e0;
}
.lists .commodity .footer .line:last-child {
  border-bottom: 0rpx dashed #e0e0e0;
}
.body image {
  transform: rotate(-90deg);
  transform-origin: center;
  width: 40rpx;
  height: 20rpx;
  margin: 0 20rpx;
}
.lists .commodity .show {
  font-size: 22rpx;
  color: #333333;
  height: 60rpx;
  border: 1px solid #e0e0e0;
  margin: 30rpx 30rpx 23rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.lists .commodity .show image {
  transform: rotate(90deg);
  transform-origin: center;
  width: 40rpx;
  height: 20rpx;
}
.rotate image{
  transform: rotate(90deg);
  transform-origin: center;
}
/* 物流信息详情 */
.captions {
  font-size: 20rpx;
  color: #999999;
  padding-bottom: 30rpx;
}
.lists .express-detail {
  margin-bottom: 30rpx;
}
.lists .express-detail image {
  width: 18rpx;
  height: 48rpx;
}
.lists .express-detail .tittle {
  font-size: 28rpx;
  line-height: 82rpx;
}
.lists .express-detail .time {
  font-size: 20rpx;
  margin-top:20rpx;  
  color: #666666;
}
.lists .express-detail .time-point {
  font-size: 24rpx;
  margin-left: 43rpx;
  color: #fc7c1f;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.lists .express-detail .time-point .text {
  flex: 1;
  margin-left: 22rpx;
  margin-right: 30rpx;
}
/* 隐藏显示控制 */
.lists .commodity .cell .right .hid {
  display: none;
}
