/* pages/home/erp/myGoods/myGoods.wxss */

.nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 24rpx;
    color: #333;
    border-bottom: 1px solid #e0e0e0;
    border-top: 1px solid #e0e0e0;
    background-color: #fff;
}

.nav .flex1 {
    flex: 1;
}

.nav .time {
    width: 40rpx;
    height: 40rpx;
    margin: 0 30rpx;
}

.nav .col {
    height: 70rpx;
    display: flex;
}

.bor-right {
    border-right: 1px solid #e0e0e0;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
    align-self: center;
    flex: 1;
}

.nav .active11, .nav .active22 {
    color: #fc7c1f;
    border-bottom: 2px solid #fc7c1f;
}

.nav .active .bor-right {
    font-size: 26rpx;
}

.item-pro {
    padding: 24rpx 30rpx;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.item-pro .pic {
    width: 120rpx;
    height: 120rpx;
    margin-right: 30rpx;
}

.item-pro .info {
    overflow: hidden;
    min-height: 110rpx;
    flex: 1;
}

.item-pro .title {
    font-size: 24rpx;
    color: #333;
    height: 60rpx;
    line-height: 30rpx;
    overflow: hidden;
}

.item-pro .mony {
    margin-top: 24rpx;
    text-align: left;
    font-size: 28rpx;
}

.item-pro .num {
    color: #cb2b2b;
}

.item-pro .txt {
    color: #3f3f3f;
}
.icon-arrow{
    margin-right: 10rpx;
    margin-left:40rpx;    
}
.icon-arrow image{
    width:15rpx;
    height:30rpx;    
}

.item-order {
    background-color: #fff;
    margin-bottom: 20rpx;
}

.item-order .title {
    height: 82rpx;
    line-height: 82rpx;
    font-size: 24rpx;
    display: flex;
    justify-content: space-between;
    padding: 0 30rpx;
    overflow: hidden;
}

.item-order .title .custome {
    flex: 1;
    color: #3d4244;
}

.item-order .title .type {
    text-align: right;
    width: 300rpx;
    color: #fc7c1f;
}

.item-order .pro {
    background-color: #fafafa;
    margin-bottom: 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24rpx 30rpx;
    font-size: 24rpx;
}

.item-order .pic {
    width: 152rpx;
    height: 152rpx;
    margin-right: 30rpx;
}

.item-order .info {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.item-order .pro-title {
    flex: 1;
}

.item-order .pro-title .name {
    color: #333;
    height: 64rpx;
    line-height: 32rpx;
    overflow: hidden;
}

.item-order .pro-title .spec {
    margin-top: 10rpx;
    height: 64rpx;
    line-height: 32rpx;
    overflow: hidden;
    color: #999;
}

.item-order .price {
    min-width: 120rpx;
    text-align: right;
    line-height: 32rpx;
}

.item-order .price .new {
    font-size: 28rpx;
    height: 40rpx;
    line-height: 40rpx;
    color: #404447;
}

.item-order .price .old {
    font-size: 28rpx;
    height: 40rpx;
    line-height: 40rpx;
    color: #999;
    text-decoration: line-through;
}

.item-order .price .num {
    margin-top: 20rpx;
    font-size: 24rpx;
    color: #999;
}


.item-order .price .btn {
    margin-top: 20rpx;
    font-size: 24rpx;
    color: #999;
    border: 1px solid #E0E0E0;
    text-align: center;
    width: 70rpx;
    height: 38rpx;
    line-height: 38rpx;
    font-size: 20rpx;
    float: right;
}

.item-order .total {
    height: 60rpx;
    line-height: 40rpx;
    text-align: right;
    font-size: 24rpx;
    padding: 0 30rpx;
    color: #666;
}

.item-order .total .num {
    margin-right: 10rpx;
}

.item-order .total .freight {
    margin: 0 10rpx;
}

.item-order .total .mony {
    margin-left: 10rpx;
    font-size: 30rpx;
    color: #cb2b2b;
}

/* 空数据 */

.no-data {
    text-align: center;
    font-size: 28rpx;
    color: #ccc;
    margin-top: 212rpx;
}

.no-data .img {
    display: block;
    width: 190rpx;
    height: 178rpx;
    margin: auto;
}

.no-data .txt {
    margin-top: 40rpx;
    display: block;
}

.icon_right{
  width: 14rpx;
  height: 28rpx;
}
.icon_right image{
    width: 100%;
}