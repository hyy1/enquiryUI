/* pages/searchWord/searchWord.wxss */

page {
  background: #fff;
}

.search-word {
}

/* 搜索 */

.form {
  width: 100%;
  padding: 10rpx 30rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  border-bottom: 2rpx solid #e0e0e0;
}

.form-group {
  margin-right: 20rpx;
  background: #f7f7f7;
  border-radius: 200rpx;
  height: 70rpx;
  width: 568rpx;
  padding-left: 20rpx;
  padding-right: 14rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding-left: 55rpx;
  background: #f7f7f7 url('http://1.img.dianjiangla.com/enquiryAssets/icon_search_word.png') no-repeat center left;
  background-position: center left 20rpx;
  background-repeat: no-repeat;
  background-size: 30rpx 30rpx;
}

.form-group .del {
  width: 28rpx;
  height: 28rpx;
}

.form-group .form-control {
  flex: 1;
  margin-left: 5rpx;
  font-size: 28rpx;
  color: #333;
}

.placeholder {
  font-size: 28rpx;
  color: #ccc;
}

.form .cancle {
  flex: 1;
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #f8f8f8;
  border: 2rpx solid #e0e0e0;
  border-radius: 6rpx;
  font-size: 28rpx;
  color: #333;
}

/* 热词搜索 */

.hot-word {
  padding: 30rpx 30rpx 0;
}

.hot-word .title {
  font-size: 28rpx;
  color: #434343;
  letter-spacing: -0.68rpx;
}

.hot-word .words {
  margin-top: 22rpx;
  display: flex;
  flex-wrap: wrap;
}

.hot-word .words .word {
  font-size: 26rpx;
  color: #676767;
  letter-spacing: -0.74rpx;
  padding: 12rpx 34rpx;
  background: #f5f5f5;
  border-radius: 100rpx;
  margin-bottom: 20rpx;
  margin-right: 10rpx;
}

/* 搜索列表 */

.list {
  padding-left: 30rpx;
}

.list .item {
  font-size: 14px;
  color: #333;
  padding: 27rpx 0 23rpx;
  border-bottom: 2rpx solid #e0e0e0;
}
