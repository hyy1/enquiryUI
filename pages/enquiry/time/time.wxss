/* pages/enquiry/time/time.wxss */

.enquiry-time {
}

.time-choise {
  padding: 80rpx 30rpx 45rpx;
   border-top: 2rpx solid #e0e0e0; 
  background: transparent url('http://1.img.dianjiangla.com/enquiryAssets/time_bg.png') no-repeat bottom left;
  background-size: 100%;
  min-height: 148rpx;
}

.time-choise .time-range {
  display: flex;
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.time-choise .time-range .start-time, .time-choise .time-range .end-time {
  flex: 1;
  border-bottom: 1rpx solid #e0e0e0;
}

.time-choise .time-range .start-time.ac, .time-choise .time-range .end-time.ac {
  color: #fc7c1f;
  border-color: #fc7c1f;
}

.time-choise .time-range .txt {
  font-size: 28rpx;
  color: #333;
  padding: 0 45rpx;
}

.time-choise .icon {
  width: 32rpx;
  height: 32rpx;
  margin-top: 25rpx;
  float: right;
}

.time-choise .tip {
  clear: both;
  font-size: 24rpx;
  color: #fc7c1f;
  display: block;
  padding-top: 10rpx;
}

.enquiry-time .confirm-btn {
  margin: 0 30rpx;
  margin-top: 90rpx;
}
